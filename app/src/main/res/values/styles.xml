<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Title text style -->
    <style name="Text1Style">
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text2 text style -->
    <style name="Text2Style">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title small text style -->
    <style name="Text3Style">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text3 style -->
    <style name="Text4Style">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Text3 bold style -->
    <style name="Text4BoldStyle">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Text4 text -->
    <style name="Text5Style">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Text5 text -->
    <style name="Text6Style">
        <item name="android:textSize">11sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Hint text style -->
    <style name="EditTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:backgroundTint">@color/hint_color</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>