<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dp_2x">

    <TextView
        android:id="@+id/taskTitleTxt"
        style="@style/Text3BoldStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2x"
        android:layout_marginEnd="@dimen/dp_1x"
        android:ellipsize="end"
        android:text="Embedded System"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/cardView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/durationTxt"
        style="@style/Text4BoldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00-14:00"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_2x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taskTitleTxt" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2x"
        app:cardCornerRadius="@dimen/dp_2x"
        app:cardBackgroundColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/placeTxt"
            style="@style/Text3BoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_1x"
            android:text="@string/home"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2x"
        app:cardBackgroundColor="@color/dark_blue"
        app:cardCornerRadius="@dimen/dp_1x"
        app:layout_constraintBottom_toBottomOf="@+id/durationTxt"
        app:layout_constraintStart_toEndOf="@+id/durationTxt"
        app:layout_constraintTop_toTopOf="@+id/durationTxt">

        <TextView
            android:id="@+id/importanceTxt"
            style="@style/Text4Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_1x"
            android:text="@string/ok"
            android:textColor="@color/white" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dp_1x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView2"/>

</androidx.constraintlayout.widget.ConstraintLayout>